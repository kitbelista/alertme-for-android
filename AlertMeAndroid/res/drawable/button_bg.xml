<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/plainbutton_default_light"
                android:endColor="@color/plainbutton_default_dark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/plainbutton_default_stroke" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/plainbutton_pressed_light"
                android:endColor="@color/plainbutton_pressed_dark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/plainbutton_pressed_stroke" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/plainbutton_selected_light"
                android:endColor="@color/plainbutton_selected_dark"
                android:angle="270" />
            <!-- solid
                android:color="@color/plainbutton_selected_light" / -->
            <stroke
                android:width="2dp"
                android:color="@color/plainbutton_selected_stroke" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/plainbutton_default_light"
                android:endColor="@color/plainbutton_default_dark"
		        android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/plainbutton_default_stroke" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>