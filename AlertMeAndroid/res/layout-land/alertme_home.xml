<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="3dip"
	android:stretchColumns="*"
    android:background="@color/page_background">
    <LinearLayout
		android:minHeight="45dip">
    	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:gravity="left"
			android:src="@drawable/icon" />
        <TextView
        	android:id="@+id/home_housename"        
            android:text="AlertMe Android"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="5dip"
	        android:gravity="left"
            android:padding="3dip" />
	    <Button
	        android:id="@+id/home_refresh"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/button"
	        android:padding="5dip"
	        android:gravity="right"
	        android:visibility="gone"
	        android:text="Refresh" />
    </LinearLayout>

    <TableRow android:padding="3dip">
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
				 android:id="@+id/home_button_status"        
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_status_offline"
			     android:layout_marginRight="10dip"
			     android:text="@string/behaviour_home" /><!-- android:onClick="selfDestruct" -->
    	</LinearLayout>
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
			 	 android:id="@+id/home_button_people"
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_people"
			     android:layout_marginRight="10dip"
			     android:text="@string/people_unavailable" />
    	</LinearLayout>
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
			 	 android:id="@+id/home_button_sensors"
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_sensors_ok"
			     android:layout_marginRight="10dip"
			     android:text="@string/sensor_none_missing" />
    	</LinearLayout>
    </TableRow>
    
    <TableRow android:padding="3dip">
		<TextView
			android:id="@+id/home_text_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_behaviour" />
		<TextView
			android:id="@+id/home_text_people"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_people" />
		<TextView
			android:id="@+id/home_text_sensors"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_sensors" />
    </TableRow>
    <TableRow android:padding="3dip">
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
			 	 android:id="@+id/home_button_history"
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_history"
			     android:layout_marginRight="10dip"
			     android:text="" />
    	</LinearLayout>
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
			 	 android:id="@+id/home_button_settings"
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_settings"
			     android:layout_marginRight="10dip"
			     android:text="" />
    	</LinearLayout>
    	<LinearLayout android:gravity="center_horizontal">
			 <Button
			 	 android:id="@+id/home_button_help"
			     android:layout_height="75dip"
			     android:layout_width="75dip"
			     android:background="@drawable/ic_home_help"
			     android:layout_marginRight="10dip"
			     android:text="" />
    	</LinearLayout>
    </TableRow>
    <TableRow android:padding="3dip">
		<TextView
			android:id="@+id/home_text_history"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_history" />
		<TextView
			android:id="@+id/home_text_settings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_settings" />        
		<TextView
			android:id="@+id/home_text_help"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dip"
			android:textColor="#333"
			android:text="@string/home_icontitle_help" />    
    </TableRow>
    <LinearLayout
    	android:gravity="center_horizontal">
    	<ImageView
    		android:id="@+id/home_splash"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:src="@drawable/splash" />
    </LinearLayout>
</TableLayout>